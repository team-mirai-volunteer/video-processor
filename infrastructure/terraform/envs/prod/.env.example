# GCP Project
GCP_PROJECT_ID=your-gcp-project-id

# Database
DATABASE_PASSWORD=your-secure-database-password

# Secrets
OPENAI_API_KEY=sk-proj-your-openai-api-key
# Note: GOOGLE_CREDENTIALS_JSON should be the entire JSON content of your service account key
# You can use: export GOOGLE_CREDENTIALS_JSON=$(cat path/to/service-account-key.json)
GOOGLE_CREDENTIALS_JSON={"type":"service_account","project_id":"..."}

# Application
CONTAINER_IMAGE=asia-northeast1-docker.pkg.dev/your-project/video-processor-prod/api:latest
CORS_ORIGIN=https://your-frontend-domain.vercel.app
GOOGLE_DRIVE_OUTPUT_FOLDER_ID=your-google-drive-folder-id-for-clips
TRANSCRIPT_OUTPUT_FOLDER_ID=your-google-drive-folder-id-for-transcripts
