{
  "name": "backend",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "postinstall": "prisma generate --schema=src/contexts/shared/infrastructure/database/prisma/schema.prisma",
    "dev": "NODE_OPTIONS='--max-old-space-size=8192' tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit -p tsconfig.check.json",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "test": "vitest",
    "test:unit": "vitest run test/contexts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:e2e": "vitest run test/e2e",
    "db:generate": "prisma generate --schema=src/contexts/shared/infrastructure/database/prisma/schema.prisma",
    "db:push": "prisma db push --schema=src/contexts/shared/infrastructure/database/prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=src/contexts/shared/infrastructure/database/prisma/schema.prisma",
    "db:studio": "prisma studio --schema=src/contexts/shared/infrastructure/database/prisma/schema.prisma",
    "dep-cruise": "depcruise src --config .dependency-cruiser.cjs"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.34",
    "@ai-sdk/openai": "^3.0.21",
    "@google-cloud/speech": "^6.7.0",
    "@google-cloud/storage": "^7.18.0",
    "@googleapis/drive": "^20.1.0",
    "@prisma/client": "^6.2.1",
    "@video-processor/shared": "workspace:*",
    "ai": "^6.0.57",
    "express": "^4.21.2",
    "fluent-ffmpeg": "^2.1.3",
    "multer": "^2.0.2",
    "openai": "^6.16.0",
    "uuid": "^11.0.5",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.10.7",
    "@types/uuid": "^10.0.0",
    "dependency-cruiser": "^17.3.7",
    "dotenv": "^17.2.3",
    "prisma": "^6.2.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.4"
  }
}
