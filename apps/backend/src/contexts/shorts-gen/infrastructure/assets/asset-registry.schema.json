{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Asset Registry",
  "description": "素材管理レジストリ - ありもの動画、BGM、声の対応表",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "videos": {
      "type": "object",
      "description": "ストック動画の定義",
      "additionalProperties": {
        "$ref": "#/definitions/VideoAsset"
      }
    },
    "bgm": {
      "type": "object",
      "description": "BGMの定義",
      "additionalProperties": {
        "$ref": "#/definitions/BgmAsset"
      }
    },
    "voices": {
      "type": "object",
      "description": "声の種類の定義",
      "additionalProperties": {
        "$ref": "#/definitions/VoiceAsset"
      }
    }
  },
  "required": ["videos", "bgm", "voices"],
  "definitions": {
    "VideoAsset": {
      "type": "object",
      "properties": {
        "path": {
          "type": "string",
          "description": "assetsディレクトリからの相対パス"
        },
        "description": {
          "type": "string",
          "description": "素材の説明"
        },
        "durationMs": {
          "type": "integer",
          "description": "動画の長さ（ミリ秒）",
          "minimum": 0
        }
      },
      "required": ["path", "description", "durationMs"]
    },
    "BgmAsset": {
      "type": "object",
      "properties": {
        "path": {
          "type": "string",
          "description": "assetsディレクトリからの相対パス"
        },
        "description": {
          "type": "string",
          "description": "BGMの説明"
        }
      },
      "required": ["path", "description"]
    },
    "VoiceAsset": {
      "type": "object",
      "properties": {
        "envKey": {
          "type": "string",
          "description": "音声モデルIDを格納する環境変数名"
        },
        "name": {
          "type": "string",
          "description": "表示名"
        },
        "description": {
          "type": "string",
          "description": "説明文"
        }
      },
      "required": ["envKey", "name", "description"]
    }
  }
}
