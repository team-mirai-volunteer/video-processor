{
  "name": "video-processor",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev": "docker compose -f apps/backend/docker-compose.yml up -d && pnpm --filter backend db:push && pnpm --filter @video-processor/webapp --filter backend --parallel run dev",
    "test": "pnpm --filter backend test:unit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "pnpm -r run typecheck",
    "db:generate": "pnpm --filter backend db:generate",
    "knip": "knip",
    "postinstall": "simple-git-hooks",
    "build:stg": "cd infrastructure/terraform && ./deploy.sh stg build",
    "build:prod": "cd infrastructure/terraform && ./deploy.sh prod build",
    "deploy:stg": "cd infrastructure/terraform && ./deploy.sh stg apply",
    "deploy:prod": "cd infrastructure/terraform && ./deploy.sh prod apply",
    "deploy:stg:full": "cd infrastructure/terraform && ./deploy.sh stg full",
    "deploy:prod:full": "cd infrastructure/terraform && ./deploy.sh prod full"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json}": "biome check --write"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "knip": "^5.82.1",
    "lint-staged": "^16.2.7",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.7.3"
  }
}
