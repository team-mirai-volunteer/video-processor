{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    "apps/backend": {
      "project": ["src/**/*.ts"],
      "entry": ["src/index.ts", "src/contexts/*/presentation/routes/*.ts"],
      "ignore": [
        "src/**/*.test.ts",
        "test/**/*.ts",
        "src/contexts/shared/infrastructure/clients/local-storage.client.ts"
      ],
      "ignoreDependencies": ["dotenv"],
      "vitest": false
    },
    "apps/webapp": {
      "entry": ["src/app/**/*.{ts,tsx}", "src/components/**/*.{ts,tsx}"],
      "project": ["src/**/*.{ts,tsx}"],
      "ignore": ["src/**/*.test.{ts,tsx}"],
      "playwright": false
    },
    "apps/shared": {
      "project": ["types/**/*.ts"]
    }
  }
}
