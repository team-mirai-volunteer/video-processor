{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    "apps/backend": {
      "entry": [
        "src/index.ts",
        "src/application/errors.ts",
        "src/domain/models/*.ts"
      ],
      "project": ["src/**/*.ts"],
      "ignore": [
        "src/**/*.test.ts",
        "test/**/*.ts",
        "src/application/services/video-processing.service.ts",
        "src/application/usecases/process-video.usecase.ts",
        "src/domain/gateways/*.ts",
        "src/domain/services/timestamp-extractor.service.ts",
        "src/infrastructure/clients/*.ts"
      ],
      "ignoreDependencies": [
        "@types/*",
        "vitest",
        "prisma",
        "tsx",
        "@google-cloud/speech",
        "fluent-ffmpeg",
        "googleapis"
      ],
      "ignoreBinaries": ["prisma", "tsx", "vitest"],
      "vitest": false
    },
    "apps/webapp": {
      "entry": [
        "src/app/**/*.{ts,tsx}",
        "src/components/**/*.{ts,tsx}"
      ],
      "project": ["src/**/*.{ts,tsx}"],
      "ignore": ["src/**/*.test.{ts,tsx}"],
      "ignoreDependencies": ["@playwright/test", "react-dom", "@types/react-dom"],
      "ignoreBinaries": ["next", "playwright"],
      "playwright": false
    },
    "apps/shared": {
      "entry": ["types/index.ts"],
      "project": ["types/**/*.ts"]
    }
  }
}
